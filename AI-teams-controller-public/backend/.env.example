# API Keys
XAI_API_KEY=your-xai-api-key-here
SONIOX_API_KEY=your-soniox-api-key-here
OPENAI_API_KEY=sk-your-openai-api-key-here

# Simple auth credentials (env-var based, no database) - DEPRECATED after Sprint 25
AUTH_EMAIL=user@example.com
AUTH_PASSWORD=your-password-here

# Database (Sprint 25) - SQLite
# Creates ./aicontroller.db automatically (no setup required)
DATABASE_URL=sqlite+aiosqlite:///./aicontroller.db

# JWT Authentication (Sprint 25) - DEPRECATED
JWT_SECRET_KEY=generate-a-random-64-char-hex-string

# Static API Token - required for all API access (no login page)
API_TOKEN=generate-a-random-token-here

# TTS Provider Configuration (Sprint 36+)
# Options: "google" (default, $4/million, 73% cheaper), "openai" ($15/million), or "hdtts" (self-hosted)
TTS_PROVIDER=google

# Google Cloud TTS Credentials
# Path to service account JSON key file (relative to backend directory)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-tts-key.json

# HD-TTS Configuration (Sprint 15)
# Base URL for HD-TTS API (default: production server)
HDTTS_API_URL=https://hd-tts-backend.hungson175.com
# API key for HD-TTS authentication
HDTTS_API_KEY=vvtts_your_api_key_here
